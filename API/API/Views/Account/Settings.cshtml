
@model API.ViewModels.SettingViewModel
@{
    ViewData["Title"] = "Account Settings";
}

<h2>Account Settings</h2>

<form asp-action="Settings" method="post">
    <div class="form-group">
        <label asp-for="DFormat" class="control-label"></label>
        <select asp-for="DFormat" asp-items="Html.GetEnumSelectList<API.ViewModels.DateForm>()" class="form-control"></select>
        <span asp-validation-for="DFormat" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>