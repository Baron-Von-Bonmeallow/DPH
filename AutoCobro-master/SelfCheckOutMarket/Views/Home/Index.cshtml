@{
    ViewData["Title"] = "Index";
}

<div class="text-center mt-5">
    <h1 class="display-4 mb-4">Welcome to Walmart AutoPay</h1>
    <p class="lead mb-5">Scan your products and pay easily without waiting in line</p>

    <a asp-controller="Checkout" asp-action="Index" class="btn btn-success btn-lg px-5 py-3">Start Shopping</a>

    <div class="mt-4">
        <a asp-controller="Products" asp-action="Index" class="btn btn-link">Manage Products</a>
        <a asp-controller="Reports" asp-action="Index" class="btn btn-link">View Reports</a>
        <a asp-controller="Tickets" asp-action="Search" class="btn btn-link">Search Ticket</a>
    </div>
</div>
