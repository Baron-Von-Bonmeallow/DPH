@foreach(var article in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@article.Title</h5>
            <h6 class="card-subtitle mb-2 text-muted">By: @article.AuthorName (@article.AuthorEmail) - @article.PublishedDate.ToLocalTime()</h6>
            <p class="card-text">@article.Content</p>
            <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id" class="card-link">Read more</a>
        </div>
    </div>
}
